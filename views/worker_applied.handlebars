<h2>Applied Jobs Page: </h2>
<h3>Worker Id: {{worker}} Name: {{workername}}</h3><br/>
<button type="button"><a href="/worker/jobs">Available Jobs</a></button>
<button type="button"><a href="/worker/applied">Applied Jobs</a></button> 
<button type="button"><a href="/worker/confirmed">Confirmed Jobs</a></button> 
<a href="/worker/logout">Logout</a><br/>
<table>
    <tr>
        <th>EmpID</th>
        <th>Emp Name</th>
        <th>WorkerId</th>
        <th>Worker Name</th>
        <th>Duration</th>
        <th>Wage</th>
        <th>Location</th>
        <th>Worker Gender</th>
        <th>Worker Age</th>
        <th>Worker Phone No.</th>
        <th>Type of Work</th>
        <th>Confirm Job</th>
    </tr>
    {{#each final}}
    <tr>
        <td>{{this.emp_id}}</td>
        <td>{{this.emp_name}}</td>
        <td>{{this.duration.days}} Days, {{this.duration.months}} Months</td>
        <td>{{this.wage}}</td>
        <td>{{this.location}}</td>
        <td>{{this.worker_id}}</td>
        <td>{{this.worker_name}}</td>
        <td>{{this.worker_gender}}</td>
        <td>{{this.worker_age}}</td>
        <td>{{this.worker_phone}}</td>
        <td>{{this.type_work}}</td>
        <td>{{confirm}}</td>
    </tr>
    {{/each}}
</table>    
